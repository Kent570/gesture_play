{
    "manifest_version": 3,
    "name": "Virtual Cursor",
    "version": "1.0",
    "description": "Simulate virtual cursor movements.",
    "permissions": [
      "scripting",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "<all_urls>"
    ]
  }
  