{
    "manifest_version": 3,
    "name": "combine",
    "version": "0.5.1",
    "permissions": [
      "activeTab",
      "tabCapture",
      "offscreen"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["speech.js","content.js","content2.js","popup.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  